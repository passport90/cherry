<h1>New Song</h1>

<%= form_with model: @song do |f| %>
  <p>
    <%= f.label :title, 'Title' %> <br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :artist, 'Artist(s)' %> <br />
    <%= 
      f.collection_select(
        :artist_id, Artist.all, :id, :name,
        {selected: @song.artist_ids, include_hidden: false}, {multiple: true}
      )
    %>
  </p>
  <p>
    <%= f.check_box :is_liked %>
    <%= f.label :is_liked, "Liked" %>
  </p>
  <p>
    <%= f.label :video_link, 'Video Link' %> <br />
    <%= f.text_area :video_link, class: 'url' %>
  </p>
  <p>
    <%= f.label :stream_link, 'Stream Link' %> <br />
    <%= f.text_area :stream_link, class: 'url' %>
  </p>
  <p>
    <%= f.label :rating, 'Rating' %> <br />
    <%= f.text_field :rating, class: 'rating' %>
  </p>
  <p><%= f.submit 'Update' %></p>
<% end %>

<p>
  <span class="symbol">‚ùå</span> <%= link_to 'Cancel', song_path(@song) %>
</p>