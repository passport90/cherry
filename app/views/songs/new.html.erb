<h1>New Song</h1>

<%= form_with model: @song do |f| %>
  <p>
    <%= f.label :title, 'Title' %> <br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :artist, 'Artist(s)' %> <br />
    <%=
      f.collection_select(
        :artist_id, Artist.all, :id, :name, {include_hidden: false},
        {multiple: true, class: 'artist-select'}
      )
    %>
  </p>
  <p>
    <%= f.label :fondness, 'Fondness' %> <br />
    <%= f.number_field :fondness %>
  </p>
  <p>
    <%= f.label :video_link, 'Video Link' %> <br />
    <%= f.text_area :video_link, class: 'url' %>
  </p>
  <p>
    <%= f.label :stream_link, 'Stream Link' %> <br />
    <%= f.text_area :stream_link, class: 'url' %>
  </p>
  <p>
    <%= f.label :rating, 'Rating' %> <br />
    <%= f.text_field :rating, class: 'rating' %>
  </p>
  <p><%= f.submit 'Create' %></p>
<% end %>

<p>
  <span class="symbol">‚ùå</span> <%= link_to 'Cancel', songs_path %>
</p>