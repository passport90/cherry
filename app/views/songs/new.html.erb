<div class="breadcrumb">
  <div class="breadcrumb__el">
    <%= link_to 'Songs', songs_path%>
  </div>
  <div class="breadcrumb__sep">
    >
  </div>
  <div class="breadcrumb__el">
    New Song
  </div>
</div>

<h1>New Song</h1>

<div class="form">
  <%= form_with model: @song do |f| %>
    <div class="form__el">
      <%= f.label :title, 'Title' %>
      <%= f.text_field :title %>
    </div>
    <div class="form__el">
      <%= f.label :artist, 'Artist(s)' %>
      <%=
        f.collection_select(
          :artist_id, Artist.all, :id, :name, {include_hidden: false},
          {multiple: true, class: 'artist-select'}
        )
      %>
    </div>
    <div class="form__el">
      <%= f.label :stream_spotify_id, 'Spotify ID' %>
      <%= f.text_field :stream_spotify_id %>
    </div>
    <div class="form__el">
      <%= f.label :video_youtube_id, 'YouTube ID' %>
      <%= f.text_field :video_youtube_id %>
    </div>
    <div class="form__el--submit"><%= f.submit 'Create' %></div>
  <% end %>
</div>